@using System.Web.Mvc.Html
@using System.Web.Optimization
@using SSM.Common
@model SSM.ViewModels.EmailModel
@Scripts.Render("~/bundles/CRMJS")
@using (Html.BeginForm("PriceQuotationSendMail", "PriceQuotation", FormMethod.Post, new { id = "frm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdRef)
    <div class="form-group-sm">
        <div class="form-group">
            @Html.ValidationSummary(true)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.EmailTo, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.EmailTo, new { @class = "form-control" })
                <div class="icon-required center-block">*</div>
                @Html.ValidationMessageFor(m => m.EmailTo)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Subject, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                <div class="icon-required center-block">*</div>
                @Html.ValidationMessageFor(m => m.Subject)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Message, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Message, new { @class = "form-control" })
                <div class="icon-required center-block">*</div>
                @Html.ValidationMessageFor(m => m.Message)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Uploads, "File đính kèm", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <div class="col-md-12" id="attachment-show">
                    <label class="title-filed title-edit-document">Attachment</label>
                    <div id="attachment">
                        <table>
                            <thead>
                                <tr><th>FileName</th><th>File Size(Kb)</th><th></th></tr>
                            </thead>
                            <tbody id="listfileView"></tbody>
                        </table>
                    </div>
                </div>
                <input type="file" id="files" name="files" multiple style="display: none">
                <input type="button" class="btn btn-link" id="btn-selectFile" value="select file..." /><br />
            </div>
        </div>

    </div>
    <div class="form-group">
        <button class="btn btn-info" type="button" id="btn-submit" style="width: 60px">
            <i class="fa fa-envelope-o"></i>
        </button>
    </div>
}