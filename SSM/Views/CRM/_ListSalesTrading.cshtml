@using SSM.Models
@model System.Collections.Generic.List<SSM.Models.MT81>

<div>
    <div class="crmplan-header-item">
        <h3>Trading sales of:<span class="text-success">@ViewBag.ProfitType </span></h3>
    </div>
</div>
<div>
    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-hover" width="100%" border="0" cellpadding="0" cellspacing="0">
            <tr class="success">

                <th>
                    Ref
                </th>
                <th>
                    Date
                </th>
                <th>
                    Customer
                </th> 
                <th>
                    Sale
                </th>
                <th class="text-right">
                    Quantity
                </th> 

            </tr>
            @foreach (MT81 item in Model)
            {
                <tr>
                    <td>
                      @item.VoucherNo
                    </td>

                    <td>
                        @item.DateCreate.Value.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @string.Format("{0}", item.Customer != null ? item.Customer.CompanyName : "")
                    </td> 
                    <td>
                        @item.User.FullName
                    </td>
                    <td  class="text-right">
                        @string.Format("{0:#,###}", item.T_Quantity)
                    </td>
                  
                </tr>
            }

        </table>
    }
</div>