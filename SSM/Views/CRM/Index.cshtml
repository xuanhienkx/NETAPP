@using System.Web.Optimization
@using SSM.Models
@using SSM.Models.CRM
@using SSM.ViewModels.Shared
@model Grid<CRMFilterProfitResult>

    @{
        ViewBag.Title = "title";
    }
    @Styles.Render("~/Content/CRM")
    @Scripts.Render("~/bundles/SCFListPagingJs")
    @using (Ajax.BeginForm("Index", new AjaxOptions()
    {
        HttpMethod = "post",
        UpdateTargetId = "ListData",
        InsertionMode = InsertionMode.Replace
    }))
    {
        <div class="SectionBlock Expanded BoxL1 fullPage">
            <div class="BoxL2">
                <div class="BoxL3">
                    <div class="BoxL4">
                        <div class="DivHeader">
                            <h2>
                                List Customer
                            </h2>
                        </div>
                        <div id="SearchBlock" style="float:left;height:auto;">

                        </div>
                        <div class="SectionHeading">
                            @Html.Partial("_HearderSearch")
                        </div>                       
                        @Html.Partial("_CRMSearch", (CRMSearchModel)ViewBag.SearchingMode)    
                        <div id="ListData">
                            @Html.Partial("_List", Model)
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
    <script type="text/javascript">
        jQuery(document).ready(function () {
            jQuery('.SectionMode').removeClass("Expand");
            jQuery("#CrmTab").addClass("Active");
            jQuery('#CrmTab').activeThisNav();
        });
    </script>

