<div id="Div2">
    <div class="SectionBlock Expanded BoxL1">
        <div class="BoxL2">
            <div class="BoxL3">
                <div class="BoxL4">
                    <div class="titleSetting">SETTING FOR DIRICTOR ONLY</div>   @*Allow control office*@

                    <table class="userSecurity">
                        <tr>
                            <th colspan="8" style="color: #336699; padding-top: 15px">
                                Allow Control Office
                            </th>
                        </tr>
                        <tr>
                            @foreach (Company CompanyItem in AllCompanies)
                            {
                                var isChecked = false;
                                if (Model.ControlCompany != null && Model.ControlCompany.Any())
                                {
                                    isChecked = Model.ControlCompany.Any(x => x.ComId == CompanyItem.Id);
                                } 
                                string idattr = "Checkbox" + step;
                                step++;

                            <td class="SettingUserTd">
                                <label for="@idattr">@CompanyItem.CompanyName </label>
                            </td>
                            <td>
                                @if (isChecked == true)
                                    {
                                    <input type="checkbox" checked="checked" id="@idattr" value="@CompanyItem.Id " name="CompanyControls" />
                                    }
                                    else
                                    {
                                    <input type="checkbox" id="@idattr" value="@CompanyItem.Id " name="CompanyControls" />
                                    }

                            </td>

                            }
                            <td class="SettingUserTd"></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th colspan="8">
                                Function For Director
                            </th>
                        </tr>
                        <tr>
                            <td class="SettingUserTd">@Html.LabelFor(m => m.AllowQuotaOffice)</td>
                            <td class="">@Html.CheckBoxFor(m => m.AllowQuotaOffice)</td>
                            <td class="SettingUserTd"> @Html.LabelFor(m => m.AllowApproRevenue)      </td>
                            <td class="">  @Html.CheckBoxFor(m => m.AllowApproRevenue)    </td>
                            <td class="SettingUserTd">@Html.LabelFor(m => m.AllowSettingSystem)</td>
                            <td class="">@Html.CheckBoxFor(m => m.AllowSettingSystem)</td>

                            <td class="SettingUserTd"></td>
                            <td></td>

                        </tr>
                        <tr>
                            <td class="SettingUserTd">@Html.LabelFor(m => m.AllowQuotaDept)</td>
                            <td class="">@Html.CheckBoxFor(m => m.AllowQuotaDept)</td>
                            <td class="SettingUserTd">@Html.LabelFor(m => m.AllowSetSales)</td>
                            <td class="">@Html.CheckBoxFor(m => m.AllowSetSales)</td>
                            <td class="SettingUserTd"></td>
                            <td></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    jquery(document).read(function () {
        jquery("AllowFollowDept").on("click", function(e) {      
            if (jquery(this).is(":checked")) {
                jquery(this).parents("tr:first").find(".listUserUpdate").addClass("show").removeClass("hidden");
            } else {
                jquery(this).parents("tr:first").find(".listUserUpdate").removeClass("show").addClass("hidden");
            }
        });
    });
</script>