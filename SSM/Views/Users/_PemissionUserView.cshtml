    }

        .userSecurity tr th {
            color: #336699;
            padding-top: 15px;
            border-bottom: 1px solid lightgray;
            text-align: left;
            font-size: 1.3em;
            font-weight: bolder;
        }

        .userSecurity tr td.SettingUserTd {
